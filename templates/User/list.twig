{% extends 'base.twig' %}

{% block title %}Liste des utilisateurs{% endblock %}
{% block body %}<h1>Liste des utilisateurs</h1>
 <main><div>
    {% for user in users %}
        <div class="card" style="width: 40%;margin:5px;">
            <figure style="width:100%;height:400px;padding:10px">
                <img src="/img/{{ user.user_photo }}" class="card-img-top img-fluid mw-100 mh-100 rounded-circle" alt="Image de {{ user.user_name }}">
            </figure>
            <div class="card-body">
                <h5 class="card-title w-100 text-center">{{ user.user_name }}</h5>
                <p class="card-text">{{ user.date_inscription }}</p>
            </div>
        </div>
    {% endfor %}

    </div></main>

{% endblock %}